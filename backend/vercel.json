{
  "version": 2,
  "builds": [
    {
      "src": "vercel-entry.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "package.json",
          "vercel-entry.js",
          "config/**",
          "models/**",
          "routes/**",
          "controllers/**",
          "middleware/**",
          "utils/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "vercel-entry.js"
    }
  ]
}